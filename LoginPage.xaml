<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MastodonClient.LoginPage"
             Title="LoginPage">
    <VerticalStackLayout>
        <Label 
            Text="What is your instance?"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry
            Placeholder="Instance Domain (e.x. meow.social)"
        />
        <Button
            Text="Continue"
        />
    </VerticalStackLayout>
</ContentPage>